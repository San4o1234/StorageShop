@model MySite_Asp_Net.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products)
                    
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.OrderDate)
                </td>
                <td>
                    <ul>
                        @foreach (var p in Model.Products)
                            {
                                <li>@p.ProductName</li>
                            }
                     </ul>
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
<div>    
    <a href="~/Order/EditOrder/@Model.Id" class="btn btn-success">Edit</a>
    <a href="@Url.Action("AllOrders", "Order")" class="btn btn-primary">Back to List</a>
    @if(User.IsInRole("admin"))
    {
        <a href="~/Order/RemoveOrder/@Model.Id" class="btn btn-danger">Delete</a>
    }
</div>
